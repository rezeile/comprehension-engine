# Prompt Management Configuration
PROMPT_VARIANT=socratic_v1
PROMPT_EXPERIMENT_MODE=false
PROMPT_EXPERIMENT_WEIGHTS=100
PROMPT_CACHE_ENABLED=true
PROMPT_RELOAD_ON_CHANGE=false
